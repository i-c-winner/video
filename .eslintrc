{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/indent": ["error", 2],
    "@typescript-eslint/no-explicit-any": ["off"],
    "@typescript-eslint/ban-ts-comment": ["off"],
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "max-len": ["warn",120],

//     "no-undef": ["off"],
    "prefer-const": ["off"]
  }
}